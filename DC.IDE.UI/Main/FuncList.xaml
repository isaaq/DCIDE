<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DC.IDE.UI.Main"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" x:Class="DC.IDE.UI.Main.FuncList"
             mc:Ignorable="d" 
             d:DesignHeight="279.192" d:DesignWidth="127.058">

    <Grid>

        <telerik:RadPanelBar ExpandMode="Single" Margin="0">
            <telerik:RadPanelBarItem IsExpanded="True" Header="导航" IsHitTestVisible="False">
                <telerik:RadListBox ItemsSource="{Binding FuncList}" Margin="-23,0,0,0" DisplayMemberPath="Name" />
            </telerik:RadPanelBarItem>
            <telerik:RadPanelBarItem IsExpanded="True" Header="2">
            </telerik:RadPanelBarItem>
        </telerik:RadPanelBar>

    </Grid>
</UserControl>
